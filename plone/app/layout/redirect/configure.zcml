<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser">

    <!-- The view we register is handy for redirecting to url.
         I.E. Used as a fallback script from forms that use redirect js methods
      -->

    <browser:page
        name="plone_redirect"
        for="*"
        class=".view.Redirect"
        permission="zope2.View"
        />

</configure>