<ul xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    i18n:domain="plone"
    id="portal-siteactions">

    <li id="siteaction-sitemap">
      <a href="#"
         tal:attributes="href string:${view/site_url}/sitemap;"
         title="Site Map"
         i18n:attributes="title;"
         i18n:translate="">Site Map</a>
    </li>

    <li id="siteaction-contact">
      <a href="#"
         tal:attributes="href string:${view/site_url}/contact-info;"
         title="Contact"
         i18n:attributes="title;"
         i18n:translate="">Contact</a>
    </li>

    <li id="siteaction-plone_setup"
        tal:condition="view/controlpanel">
      <a href="#"
         tal:attributes="href string:${view/site_url}/@@overview-controlpanel;"
         title="Site Setup"
         i18n:attributes="title;"
         i18n:translate="">Site Setup</a>
    </li>
</ul>