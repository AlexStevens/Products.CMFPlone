                  condition="python:nextprevious_enabled">

    <tal:comment define="comment string:FIXME The above should be: condition='python:nextprevious_enabled and isViewTemplate'" />

    <link rel="previous"
          href=""
          title="Go to previous item"
          tal:define="previous nextprevious_view/previous"
          tal:condition="previous"
