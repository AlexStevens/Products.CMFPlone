<tal:block repeat="portlet options/portlets">
<div tal:define="info portlet/info;
                 key  string:${info/manager}-${info/category}-${info/key}-${info/name}"
     tal:attributes="id string:portletwrapper-${key}"
     tal:content="structure python:portlet['renderer'].render()" />
</tal:block>

<div class="managePortletsLink"
      i18n:domain="plone">
  <a title="View portlet management screen"
     tal:condition="view/can_manage_portlets"
     i18n:attributes="title"
     i18n:translate="manage_portlets_link"
     tal:attributes="href string:${view/base_url}/@@manage-portlets"
     >Manage portlets</a>
</div>